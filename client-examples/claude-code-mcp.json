{
  // Claude Code CLI MCP Server Configuration
  // Save this as .mcp.json in your project root or user config directory
  // Claude Code will automatically discover and load this MCP server
  
  "mcpServers": {
    "mcp-memory-server": {
      // Server display name in Claude Code
      "name": "Enhanced Memory Server",
      "description": "Hierarchical memory with domain-specific importance scoring",
      
      // Server execution command
      "command": "python3",
      "args": [
        "scripts/start_server.py"
      ],
      
      // Working directory (relative to this config file)
      "cwd": ".",
      
      // Environment variables for domain configuration
      "env": {
        // Domain selection - customize for your use case:
        // "software-development" (default), "business-development", 
        // "research", "creative-writing", "cooking", etc.
        "MCP_DOMAIN": "software-development",
        
        // Optional: Override default config file
        // "MCP_CONFIG_PATH": "/path/to/custom/config.json"
        
        // Optional: Custom data directory
        // "MCP_DATA_PATH": "./data"
      },
      
      // Server startup timeout (milliseconds)
      "timeout": 30000,
      
      // Restart policy
      "restart": "always",
      
      // Logging configuration
      "logging": {
        "level": "INFO",
        "file": "logs/claude-code-mcp.log"
      }
    }
  },
  
  // Global MCP configuration
  "globalSettings": {
    // Default timeout for all MCP operations
    "defaultTimeout": 10000,
    
    // Enable/disable MCP server health checks
    "healthChecks": true,
    
    // Logging preferences
    "logging": {
      "enabled": true,
      "level": "INFO",
      "directory": "logs"
    }
  }
}