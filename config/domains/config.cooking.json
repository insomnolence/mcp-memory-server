{
  "_comment": "Culinary/Cooking Domain Configuration Example",
  "database": {
    "persist_directory": "./chroma_db_cooking",
    "collections": {
      "short_term": "short_term_memory",
      "long_term": "long_term_memory", 
      "consolidated": "consolidated_memory"
    }
  },
  "embeddings": {
    "model_name": "sentence-transformers/all-MiniLM-L6-v2",
    "chunk_size": 1000,
    "chunk_overlap": 100
  },
  "reranker": {
    "model_name": "cross-encoder/ms-marco-MiniLM-L-6-v2"
  },
  "memory_scoring": {
    "decay_constant": 86400,
    "max_access_count": 100,
    "importance_threshold": 0.7,
    "scoring_weights": {
      "semantic": 0.4,
      "recency": 0.3,
      "frequency": 0.2,
      "importance": 0.1
    },
    "base_scoring": {
      "length_normalization": 1000,
      "max_length_score": 1.0
    },
    "domain_patterns": {
      "case_sensitive": false,
      "patterns": {
        "recipes_and_instructions": {
          "_comment": "Recipes and cooking instructions",
          "keywords": ["recipe", "ingredients", "instructions", "steps", "cook", "bake", "fry", "saut√©", "boil"],
          "regex_patterns": ["\\d+\\s*(cups?|tbsp|tsp|oz|lbs|grams?|ml|minutes?|hours?)"],
          "bonus": 0.4,
          "match_mode": "any"
        },
        "techniques_and_methods": {
          "_comment": "Cooking techniques and methods",
          "keywords": ["technique", "method", "sous vide", "braising", "roasting", "grilling", "poaching", "reduction"],
          "bonus": 0.35,
          "match_mode": "any"
        },
        "flavor_profiles": {
          "_comment": "Flavor combinations and profiles",
          "keywords": ["flavor", "taste", "seasoning", "spice", "herbs", "umami", "sweet", "salty", "bitter", "sour"],
          "bonus": 0.3,
          "match_mode": "any"
        },
        "ingredient_knowledge": {
          "_comment": "Ingredient properties and substitutions",
          "keywords": ["ingredient", "substitution", "fresh", "seasonal", "organic", "quality", "selection", "storage"],
          "bonus": 0.25,
          "match_mode": "any"
        },
        "presentation_plating": {
          "_comment": "Food presentation and plating",
          "keywords": ["presentation", "plating", "garnish", "visual", "appearance", "color", "texture", "arrangement"],
          "bonus": 0.2,
          "match_mode": "any"
        },
        "culinary_science": {
          "_comment": "Food science and culinary chemistry",
          "keywords": ["food science", "chemistry", "reaction", "emulsion", "fermentation", "pH", "temperature", "molecular"],
          "bonus": 0.45,
          "match_mode": "any"
        }
      },
      "permanence_triggers": {
        "signature_recipes": {
          "_comment": "Signature dishes and perfected recipes",
          "keywords": ["signature dish", "perfected recipe", "family recipe", "secret ingredient"],
          "boost": 0.25
        },
        "cooking_fundamentals": {
          "_comment": "Fundamental cooking principles",
          "keywords": ["fundamental", "basic technique", "cooking principle", "essential skill"],
          "boost": 0.2
        },
        "food_safety": {
          "_comment": "Food safety and health information",
          "keywords": ["food safety", "temperature control", "cross contamination", "allergens"],
          "boost": 0.3
        },
        "seasonal_specialties": {
          "_comment": "Seasonal cooking knowledge",
          "keywords": ["seasonal", "harvest", "fresh produce", "local ingredients"],
          "boost": 0.15
        }
      }
    }
  },
  "memory_management": {
    "short_term_max_size": 100,
    "consolidation_threshold": 50,
    "maintenance_interval_hours": 1,
    "consolidation_interval_hours": 6,
    "stats_interval_hours": 24
  },
  "lifecycle": {
    "ttl": {
      "high_frequency_base": 300,
      "high_frequency_jitter": 60,
      "medium_frequency_base": 3600,
      "medium_frequency_jitter": 600,
      "low_frequency_base": 86400,
      "low_frequency_jitter": 7200,
      "static_base": 604800,
      "static_jitter": 86400
    },
    "aging": {
      "enabled": true,
      "decay_rate": 0.1,
      "minimum_score": 0.1,
      "refresh_threshold_days": 7.0
    },
    "maintenance": {
      "enabled": true,
      "cleanup_interval_hours": 1,
      "consolidation_interval_hours": 6,
      "statistics_interval_hours": 24,
      "deep_maintenance_interval_hours": 168
    }
  },
  "server": {
    "host": "127.0.0.1",
    "port": 8080,
    "title": "Culinary Memory MCP Server",
    "version": "2.0.0",
    "protocol_version": "2025-06-18"
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": "mcp_server_cooking.log"
  }
}